
  <label for="filter">Người dùng</label>
  <select name="filter" id="id_account">
    <option value=""></option>
    <option value="admin">Admin</option>
    <option value="user">User</option>
  </select>

  <label for="filter">Ngày tạo</label>
  <select name="filter" id="id_created_at">
    <option value=""></option>
    <option value="desc">Mới nhất</option>
    <option value="asc">Cũ nhất</option>
  </select>


  <label for="filter">Bài viết</label>
  <select name="filter" id="id_quantity">
     <option value=""></option>
    <option value="desc">Nhiều nhất</option>
    <option value="asc">Ít Nhất</option>
  </select>

<div>
    <span>Tài khoản của tôi</span>
    <%= current_user&.name %>
    <%= current_user&.email %>
    <%= current_user&.products.size %>
  </div>
<div>

  <table>
    <thead>
      <tr>
        <td>Tên </td>
        <td>Email</td>
        <td>Tổng số bài viết</td>
        <td></td>
      </tr>
    </thead>
    <tbody id="id_user_list">
      <% @admins.each do |admin| %>
        <tr>
          <td><%=link_to admin.name, admin_edit_path(admin.id)%></td>
          <td><%= admin.email%></td>
          <td><%= admin&.products&.size%></td>
          <td>
            <%= link_to 'Xóa', admin_delete_path(admin.id), data: {confirm: "Bạn có chắc muốn xóa?"}, method: :delete %>
          </td>
        </tr>
      <% end%>
    </tbody>
  </table>
</div>
